{
  "compilerOptions": {
    "baseUrl" : "./src",
    "paths" : {
      "@assets/*": ["../assets/*"],
      "@components/*": ["./renderer/components/*"],
      "@hook/*": ["./renderer/services/hook/*"],
      "@store/*": ["./renderer/services/store/*"],
      "@main/*": ["./main/*"],
    },
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ],
}
